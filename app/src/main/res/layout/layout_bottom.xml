<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:background="#f9f9f9"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dfdfdd"/>

    <!-- 底部导航 -->

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:background="#f9f9f9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_main_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/rl_main_mainhome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_home_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:focusable="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/main_main_home_gray"/>

                    <TextView
                        android:id="@+id/tv_home_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_home_page"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="首页"
                        android:textColor="#abadbb"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <!--<cn.rongcloud.im.ui.widget.DragPointView-->
                <!--android:id="@+id/seal_num"-->
                <!--android:layout_width="19dp"-->
                <!--android:layout_height="19dp"-->
                <!--android:layout_gravity="right"-->
                <!--android:layout_marginRight="19dp"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:layout_toRightOf="@id/ll"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="12sp"-->
                <!--android:visibility="invisible"/>-->


            </FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_dynamics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_main_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/main_dynamic_gray"/>

                <TextView
                    android:id="@+id/tv_main_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_main_dynamic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="动态"
                    android:textColor="#abadbb"
                    android:textSize="12sp"/>


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_main_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/main_message_gray"/>

                <TextView
                    android:id="@+id/tv_main_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_main_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="私信"
                    android:textColor="#abadbb"
                    android:textSize="12sp"/>


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">


            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/iv_main_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/main_more_gray"/>


                <TextView
                    android:id="@+id/tv_main_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_main_more"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="更多"
                    android:textColor="#abadbb"
                    android:textSize="12sp"/>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>