<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8_dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_main_home_head"
                android:layout_marginRight="@dimen/margin_12_dp"
                android:layout_width="@dimen/margin_50_dp"
                android:layout_height="80dp"
                android:focusable="false"
                android:src="@drawable/main_notice_head_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:id="@+id/ll_add_user"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_item_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_12_dp"
                android:layout_height="wrap_content"
                android:text="肥肥猫"
                android:textSize="@dimen/textsize_14_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_user_item_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1_dp"
                android:text="肥猫家族族长"
                android:textSize="@dimen/textsize_14_sp"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_item_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:text="1.2k赞同"
                    android:textSize="@dimen/textsize_14_sp"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1_dp"
                    android:layout_marginRight="@dimen/margin_1_dp"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:text="·"
                    android:textSize="@dimen/textsize_14_sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tv_user_item_observe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8_dp"
                    android:text="1.2k关注"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_14_sp"
                    android:textStyle="italic"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_user_item"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_8_dp"
                android:background="@drawable/btn_style2"
                android:text="+关注"/>

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1_dp"
        android:background="@color/lightgray">

    </View>
</LinearLayout>